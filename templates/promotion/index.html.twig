{% extends 'admin.html.twig' %}

{% block title %}Promotions{% endblock %}

{% block body %}
<div class="card card-outline card-orange">
  <div class="card-header">
    <h3 class="card-title">Liste des promotions</h3>
  </div>
  <div class="card-body">
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Année début</th>
                <th>Année diplôme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.name }}</td>
                <td>{{ promotion.startingYear ? promotion.startingYear|date('Y-m-d') : '' }}</td>
                <td>{{ promotion.graduationYear ? promotion.graduationYear|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
  <div class="card-footer">
    <a href="{{ path('promotion_new') }}" class="btn btn-success">Créer nouvelle promotion</a>
  </div>
</div>
{% endblock %}
