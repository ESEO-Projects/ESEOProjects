{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello! ✅</h1>
    {{ dump(projects) }}
    {% for project in projects %}
        <div class="card" style="width: 18rem;margin:10px 0;">
            <img class="card-img-top" src="" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{ project.name }}</h5>
                <p class="card-text">{{ project.description }}</p>
                {# regex pour détecter la structure de l'url #}
                {% if project.githubUrl == "" %}
                    <a href="#" style="pointer-events:none;text-decoration:none;color:gray;">Github Link</a>
                {% else %}
                    <a href={{ project.githubUrl }} target="_blank">Github Link</a>
                {% endif %}
            </div>
        </div>
        {# {{ currentDate|date('m/d/Y') }} #}
    {% endfor %}

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ '/Users/halope/Dev/ESEOProjects/src/Controller/HomeController.php'|file_link(0) }}">src/Controller/HomeController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/Users/halope/Dev/ESEOProjects/templates/home/index.html.twig'|file_link(0) }}">templates/home/index.html.twig</a></code></li>
    </ul>
</div>
{% endblock %}
