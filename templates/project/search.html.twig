{% extends 'base.html.twig' %}

{% block body %}
<h2>Résultat(s) de la recherche : {{ search }}</h2>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
  {% for project in projects %}
  <div class="col">
    <div class="card shadow-sm">
      <img style="pointer-events:none;" src="{{ asset('elec.png') }}" />
      <div class="card-header project-title">
        <h3 class="name">{{ project.name }}</h3>
      </div>
      <div class="card-body">
        <p class="card-text">{{ project.shortDescription }}</p>
        <div class="d-flex justify-content-between align-items-center">
          <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-sm project-show">Page du projet</a>
        </div>
      </div>
    </div>
  </div>
  {% else %}
    <div class="alert alert-warning">
      <p>Aucun résulat pour cette recherche. Rééssayez avec une autre recherche.</p>
    </div>
  {% endfor %}
</div>
{% endblock %}
