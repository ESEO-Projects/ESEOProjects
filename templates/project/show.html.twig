{% extends 'base.html.twig' %}

{% block title %}Plateforme projets - ESEO | {{project.name}}{% endblock %}

{% block stylesheets %}
<style>
*  { color:#000; }
hr { margin: 10px 0; }
div.global_container {  }
div.card { margin-top:65px; max-width: 100%;}
h1#project_name {  }
p#users { color:grey;font-size:12px; }
div.card_footer a { font-size:40px;margin:0 10px; }
div.card_footer a:hover { cursor:pointer; }
#redirection_links { margin:10px 0; }
div#inline { dsplay:flex;flex-direction:row; }
.menu { display: flex;justify-content: center;list-style:none;margin:0;padding:0; }
.menu a span:first-child { display: inline-block;padding: 20px; }
.menu a { display: block;position: relative;overflow: hidden; }
.menu a span:last-child {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateY(-100%);
}
.menu a span { transition: transform 0.2s ease-out; }
.menu a:hover span:first-child { transform: translateY(100%); }
.menu a:hover span:last-child { transform: none; }
#repo_github { color:#000;text-decoration:underline;font-weight:normal; }
</style>
{% endblock %}


{% block body %}
<div class="container-fluid">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">
        {{ project.name }} | {{ project.createdAt ? project.createdAt|date('d/m/Y') : '' }}
      </h3>
    </div>
    <div class="card-body">
      <p id="users">{{ project.users|users }}</p>
      <div class="card-text">{{ project.description|raw }}</div>
      {% if project.githubUrl != "" %}
      <p>
        <span style="font-weight:bold;">
          Code source:
            <a id="repo_github" target="_blank" href="{{ project.githubUrl }}">
              Dépôt Github
            </a>
          </p>
          {% endif %}
          <hr>
        </div>
        <div class="card-footer" style="background-color: #FFF; font-size: 20px;">
          <ul class="menu justify-content-around">
            <li>
              <a href="#0">
                <span><i class="fas fa-eye"></i></span>
                <span>{{ project.views }}</span>
              </a>
            </li>
            <li>
              <a href="#0">
                <span><i class="fas fa-euro-sign"></i></span>
                <span>{{ project.cost }}</span>
              </a>
            </li>
          </ul>
        </div>
      </div>

      <div id="redirection_links">
        <a class="btn btn-primary" href="{{ path('project_index') }}">Retour à la liste</a>
      </div>
    </div>
  {% endblock %}
  {% block javascripts %}
  <script src="https://kit.fontawesome.com/ebc72dbf59.js" crossorigin="anonymous"></script>
{% endblock %}
